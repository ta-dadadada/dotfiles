# フォント設定
font-family = "DejaVuSansMono Nerd Font"
font-size = 13

# adjust-line-height は adjust-cell-height に変更されました
adjust-cell-height = 10%

# window-opacity/blur は background-opacity/blur に変更されました
background-opacity = 0.95
background-blur = true

# cursor-blink は cursor-style-blink に変更されました
cursor-style = block
cursor-style-blink = false

# theme = "dark" という名前のテーマは存在しません。
# 一旦コメントアウトしてシステムのデフォルト（ダーク）を使うか、
# 有名なテーマ名を指定してください（例: theme = snazzy）
# theme = snazzy

# その他の設定は以前のままでOKです
macos-option-as-alt = true
window-decoration = false

