# ---------------------------------------------------------
# フォント設定 (Nerd Font 最適化)
# ---------------------------------------------------------
# DejaVuSansMono Nerd Font を指定。システムにインストールされている正確な名前を指定してください
font-family = "DejaVuSansMono Nerd Font"
font-size = 13
# Starship のグリフが綺麗に並ぶよう、行間を微調整（お好みで 1.0 〜 1.2）
adjust-line-height = 1.1

# ---------------------------------------------------------
# キーバインド (Emacs / tmux ユーザー向け)
# ---------------------------------------------------------
# macOSのOptionキーをMetaキーとして送信する
# これにより、zshやtmux内での Option+f (単語送り), Option+b (単語戻し) が機能します
macos-option-as-alt = true

# ---------------------------------------------------------
# 外観 (tmux に没入するためのミニマル化)
# ---------------------------------------------------------
# タイトルバーを非表示にし、tmuxのステータスラインを主役にする
window-decoration = false

# カラーテーマ（Starshipの配色が映える落ち着いたダーク系）
# ghostty +list-themes で一覧が見れます。まずは 'dark' または 'clrs' がおすすめ
theme = dark

# 背景の透過（Starshipのモダンな雰囲気に合わせて微調整）
window-opacity = 0.95
window-blur = true

# ---------------------------------------------------------
# マウス・カーソル
# ---------------------------------------------------------
# カーソルの形状（tmux/Emacs風なら block が馴染みやすいです）
cursor-style = block
# カーソルの点滅を止める（集中力維持のため。動かしたい場合は true）
cursor-blink = false
